{{>navbar}}
{{#if error_msg}}
  <div class="invisible">erro,{{error_msg}}</div>
{{/if}}
{{#if msg}}
  <div class="invisible">{{tipo}},{{msg}}</div>
{{/if}}
<form action="" method="post" id="form">
  <input type="hidden" id="prod-select"  class="invisible">
  <input type="hidden" id="id_estoque" name="id" class="invisible"/>
  <input type="hidden" id="cod_estoque" name="codigo" class="invisible"/>
  <input type="hidden" id="desc_estoque" name="descricao" class="invisible"/>
  <div class="container">    
    <div class="card">
      <h1>Entrada / Saida de Estoque</h1>
        <div class="msg" id="msg"><p id="msgtext"></p></div>
        <div class="line">
        <div class="textfield">
          <label for="btn-select-prod">Produto</label>
          <div class="select-prod">
            <div class="btn-select-prod">
              <span>Selecione um produto</span>
            </div>
            <div class="select-content-prod">
              <input type="text" id="input-select-prod">
              <ul class="options-prod">
              </ul>
            </div>
          </div>
        </div>
        <div class="textfield">
          <label for="fabricante_estoque">Fabricante</label>
          <input type="text" name="fabricante" id="fabricante_estoque" placeholder="Ex: Risque" autocomplete="off" readonly/>
        </div>
        <div class="textfield cod">
          <label for="qtde_estoque">Qtde atual</label>
          <input type="number" name="qtde" id="qtde_estoque" placeholder="Ex: 50" autocomplete="off" readonly/>
        </div>
      </div>
      <div class="line">
        <div class="textfield cod">
          <label for="custo_estoque">*Custo R$</label>
          <input type="text" name="custo" id="custo_estoque" placeholder="Ex: 1,50" autocomplete="off"/>
        </div>
        <div class="textfield cod">
          <label for="lucro_estoque">*Lucro %</label>
          <input type="text" name="lucro" id="lucro_estoque" placeholder="Ex: 15.5" autocomplete="off"/>
        </div>
        <div class="textfield cod">
          <label for="venda_estoque">Venda R$</label>
          <input type="text" name="venda" id="venda_estoque" placeholder="0,00" readonly/>
        </div>
        <div class="textfield cod">
          <label for="qtdeInsert_estoque">**Qtde a alterar</label>
          <input type="number" name="qtdeInsert" id="qtdeInsert_estoque" placeholder="Ex: 50" autocomplete="off" />
        </div>

      </div>
      <div class="lbl">
        <p>(*) OBRIGATÃ“RIO</p><p>(**)para saidas colocar valor negativo</p>
      </div>
      <button class="btn-salvar" id="btnAtualizar_estoque" disabled>Entrada / Saida</button>
    </div>
  </div>
</form>
