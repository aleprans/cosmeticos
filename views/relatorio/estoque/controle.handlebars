<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Relatório de controle de Estoque</h1>
  <div class="data">Data: {{dtAtual}}</div>
  <hr>
  <table>
    <thead>
      <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Fabricante</th>
        <th>Qtde Min</th>
        <th>em Estoque</th>
      </tr>
    </thead>
    <tbody>
      {{#each estoque}}
        <tr class="dados">
          <td>{{codigo}}</td>
          <td>{{descricao}}</td>
          <td>{{fabricante}}</td>
          <td id="qtdeMin">{{qtdeMin}}</td>
          <td id="qtde">{{qtde}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
<script>
const qtdeMin = document.querySelectorAll("#qtdeMin")
const qtde = document.querySelectorAll("#qtde")
const dados = document.querySelectorAll(".dados")
for(x = 0; x < qtdeMin.length; x++){
const qt = parseInt(qtde[x].textContent)
const qtm = parseInt(qtdeMin[x].textContent)
  if(qt < qtm){
    dados[x].style.color = 'red'
    dados[x].style.fontWeight = 'bold'
  }
}

</script>
</body>
</html>

<style>
  h1 {
    text-align: center;
    color: #BF8C2C;
    text-shadow: 1px 1px #201b2c;
  }

  .data {
    text-align: end;
    color: #201b2c;
  }

  table {
    border: 3px solid #BF8C2C;
    width: 100%;
    color: #222;
  }

  td, th {
    text-align: center;
    border: 1px solid #be9b5a;
    margin: 0;
    padding: 0;
  }

  hr {
    border-color: #BF8C2C;
  }

  th{
    background-color: #BF8C2C;
  }

  #qtde {
    width: 120px;
  }

  #qtdeMin {
    width: 100px;
  }
</style>