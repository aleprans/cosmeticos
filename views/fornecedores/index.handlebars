{{>navbar}}
{{#if msg}}
  <div class="invisible">{{tipo}},{{msg}}</div>
{{/if}}
<form action="" method="post" id="form">
  <input type="hidden" id="isInsert" name="isInsert">
  <input type="hidden" id="idForn" name="idForn">
  <div class="container">
    <div class="card">
      <h1>Cadastro de Fornecedores</h1>
        <div class="msg" id="msg"><p id="msgtext"></p></div>
      <div class="line">
        <div class="textfield">
          <label for="nome">*Telefone</label>
          <input type="text" name="tel" id="telFornecedor" placeholder="Ex: (12) 91234-5678" autocomplete="off"/>
        </div>
        <div class="textfield">
          <label for="nome">*Nome</label>
          <input type="text" name="nome" id="nomeFornecedor" placeholder="Ex: Distribuidora 001 | mínimo 5 caracteres" autocomplete="off"/>
        </div>
        <div class="textfield">
          <label for="nome">*Contato</label>
          <input type="text" name="contato" id="contatoFornecedor" placeholder="Ex: João Oliveira | mínimo 5 caracteres" autocomplete="off"/>
        </div>
      </div>
      <div class="lbl">
        <p>(*) OBRIGATÓRIO</p>
      </div>
      <button class="btn-salvar" id="btnSalvarFornecedor">Salvar</button>
    </div>
  </div>
</form>